<div class="topic-new-wrapper">
  <div class="container">
    <div class="row topic_new_form_size">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Fishing log</h1>
        <%= form_for @topic do |f| %>
           <div class="form-group">
              <%= f.label :image %>
              <%= f.file_field :image %>
            </div>
            <div class="form-group">
              <%=  "日付" %>
              <%= f.date_select :f_date, {}, class: 'form_control' %>
            </div>
            <div class="form-group">
              <%= f.label :field, "エリア" %>
              <%= f.select :field, [["ミシガン", "ミシガン"], ["アマゾン","アマゾン"], ["ナイアガラ","ナイアガラ"]]  %>
            </div>
            <div class="form-group">
              <%= f.label :description, "釣り場メモ"  %><br>
              <%= f.text_area :description, class: 'form_control form_size' %>
            </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
