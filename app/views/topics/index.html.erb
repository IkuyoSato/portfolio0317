<div class="topic-index-wrapper">
  <div class="container">
    <!-- 投稿一覧は写真のみ表示し、詳細は,show頁で　 -->
    <!-- # topic_count 0 からStart　 -->
    <% topic_count =  0 %>
    <% @topics.each do |topic| %>
    　 <!-- topic_countが３の倍数ならば -->
        <% if topic_count % 3 == 0 %>

            <% if topic_count  > 0 %>
                </div>
            <% end %>

            <div class="row">
        <% end %>

          <div class="col-md-3">
            <div class="topic-index-single">
              <h2 class = "topic-author">
                <%= topic.user.name %>
              </h2>
              <%= image_tag topic.image.url %>

              <h4 class = "topic-link">
                <%= link_to("Fishing logへ", topic_path(id: topic.id) ) %>
              </h4>
            </div>
          </div>

        <% topic_count += 1 %>
    <!-- each文の閉じタグ　 -->
    <% end %>
    </div>
  </div>
</div>
