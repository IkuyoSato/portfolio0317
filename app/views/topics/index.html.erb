<div class="topic-index-wrapper">
  <div class="container">
    <!-- 投稿一覧は写真のみ表示し、詳細は,show頁で　 -->
    <% @topics.each_with_index do |topic, i| %>
    <% if i % 3 == 0 %>
    <div class="row equal">
    <% end %>
         <div class="col-md-4">
           <div class="topic-index-single h-100">
             <h2 class = "topic-author" style="align-items:start;">
               <%= topic.user.name %>
             </h2>
             <div class="topic-image" style="align-items:center;">
               <% if topic.image.url.include?(".mp4") %>
                 <%= video_tag  topic.image.url,   :style => "width:100%;", controls: true, autobuffer: true %>
              <% else %>
                 <%= image_tag topic.image.url %>
               <% end %>
             </div>
             <h5 class = "topic-link" style="align-items:end;">
               <%= link_to("Fishing logへ", topic_path(id: topic.id) ) %>
             </h5>
           </div>
         </div>
    <% if i % 3 == 2 %>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
