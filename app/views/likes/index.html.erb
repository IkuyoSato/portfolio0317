<div class="topic-index-wrapper">
  <div class="container">
    <!-- いいね一覧は写真のみ表示し、詳細は,show頁で　 -->
    <!-- # like_count 0 からStart　 -->
    <% like_count =  0 %>
    <% @like_topics.each do |topic| %>
    　 <!-- like_countが３の倍数ならば -->
        <% if like_count % 3 == 0 %>

            <% if like_count  > 0 %>
                </div>
            <% end %>

            <div class="row row-eq-height">
        <% end %>

          <div class="col-md-3">
            <div class="topic-index-single">
              <h2 class = "topic-author">
                <%= topic.user.name %>
              </h2>
              <div class="topic-image">
                  <%= image_tag topic.image.url %>
              </div>
              <h5 class = "topic-link">
                <%= link_to("Fishing logへ", topic_path(id: topic.id) ) %>
              </h5>
            </div>
          </div>

        <% like_count += 1 %>
    <!-- each文の閉じタグ　 -->
    <% end %>
  </div>
</div>
